@page
@model BookListRazor.Pages.CreateModel

<br/>
<h2 class="text-info">Add New Book</h2> <br/>

<div class="border container" style="padding:30px;">

    <form method="post" asp-action="">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-10">
                <input asp-for="Book.Name" class="form-control" placeholder="Book Name" />
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-10">
                <input asp-for="Book.Author" class="form-control" placeholder="Author's Name" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Book.Year"></label>
            </div>
            <div class="col-10">
                <input asp-for="Book.Year" class="form-control" placeholder="Year of Publication" />
                <span asp-validation-for="Book.Year" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>

        </div>
    </form>

</div>
@section Scripts{ 
<partial name="_ValidationScriptsPartial"/>
}

