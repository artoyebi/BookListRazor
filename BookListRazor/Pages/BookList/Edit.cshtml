@page
@model BookListRazor.Pages.BookList.EditModel

<br />
<h2 class="text-info">Edit Book</h2>
<br />

<div class="border container" style="padding:30px;">

    <form method="post" asp-action="">
        <input type="hidden" asp-for="Book.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <div class="row">
                <div class="col-2">
                    <label asp-for="Book.Name"></label>
                </div>
                <div class="col-10">
                    <input asp-for="Book.Name" class="form-control" placeholder="Book Name" />
                    <span asp-validation-for="Book.Name" class="text-danger"></span>
                </div>

                <div class="col-2">
                    <label asp-for="Book.Author"></label>
                </div>
                <div class="col-10">
                    <input asp-for="Book.Author" class="form-control" placeholder="Author's Name" />
                    <span asp-validation-for="Book.Author" class="text-danger"></span>
                </div>

                <div class="col-2">
                    <label asp-for="Book.Year"></label>
                </div>
                <div class="col-10">
                    <input asp-for="Book.Year" class="form-control" placeholder="Year of Publication" />
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3"> 
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>

        </div>
    </form>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

